  <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
  <script>
  // Sélectionner toutes les images et leurs légendes
const images = document.querySelectorAll('.image-story');
const captions = document.querySelectorAll('.story-caption');

// Ajouter un événement de clic à chaque image
images.forEach((image, index) => {
  image.addEventListener('click', () => {
    // Alterner la visibilité de la légende liée à l'image
    if (captions[index].style.opacity === "1") {
      captions[index].style.opacity = "0";
      captions[index].style.transform = "translateY(10px)";
    } else {
      captions[index].style.opacity = "1";
      captions[index].style.transform = "translateY(0)";
    }
  });
});
  </script>
